/*

interrupt controller
1 main controller:intc
2 sub controller:sub-intc
3 sub controller:extrn-intc
#interrupt-cells = <0x4>;  <controller-number   main-controller-irq-number   sub-controller-number   Interrupt-trigger-type>
uart and timer setting just use the interrupt innformation,the other platform device information is static in the code
*/
/dts-v1/;
#include "s3c2416.dtsi"

/ {
	model = "SMDK2440";
	compatible = "samsung,SMDK2440";

	memory@30000000 {
		device_type = "memory";
		reg =  <0x30000000 0x4000000>;
	};

	clocks {
		compatible = "simple-bus";

		xti: xti {
			compatible = "fixed-clock";
			clock-frequency = <12000000>;
			clock-output-names = "xti";
			#clock-cells = <0>;
		};
	};
	eth0@20000000 {
		compatible = "dv,dm9000";
		interrupt-parent = <&extintc>;
		reg = <0x20000000 0x4>,<0x20000004 0x4>;
		interrupts = <2 4 7 1>;
	};
	uart0: serial0@50000000 {
		compatible = "samsung,2440-uart";
		interrupt-parent = <&subintc>;
		reg = <0x50000000 0x4000>;
		interrupts = <1 28 0 4>,<1 28 1 4>;
		status = "okay";
	};

	uart1: serial1@50004000 {
		compatible = "samsung,2440-uart";
		interrupt-parent = <&subintc>;
		reg = <0x50004000 0x4000>;
		interrupts = <1 23 3 4>,<1 23 4 4>;
		status = "okay";
	};
	uart2: serial2@50008000 {
		compatible = "samsung,2440-uart";
		interrupt-parent = <&subintc>;
		reg = <0x50008000 0x4000>;
		interrupts = <1 15 6 4>,<1 15 7 4>;
		status = "okay";
	};
	lcd0@4d000000 {
		compatible = "s3c,td35";
		interrupt-parent = <&intc>;
		reg = <0x4d000000 0x80>;
		interrupts = <0 16 0 1>;
	};
};
/*
&rtc {
	status = "okay";
};
*/
&sdhci_0 {
	pinctrl-names = "default";
	pinctrl-0 = <&sd1_clk>, <&sd1_cmd>,
			<&sd1_bus1>, <&sd1_bus4>;
	bus-width = <4>;
	broken-cd;
	status = "okay";
};

&sdhci_1 {
	pinctrl-names = "default";
	pinctrl-0 = <&sd0_clk>, <&sd0_cmd>,
			<&sd0_bus1>, <&sd0_bus4>;
	bus-width = <4>;
	cd-gpios = <&gpf 1 0>;
	cd-inverted;
	status = "okay";
};

&watchdog {
	status = "okay";
};
